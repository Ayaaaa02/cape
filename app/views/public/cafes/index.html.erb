<div class="container">
  <div class="row">
    <div class="col-lg-4 text-right m-4">
       <h4 class="text-center"><strong>カフェ一覧</strong></h4>
    </div>
  </div>
  <div class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left">
    <% @cafes.each do |cafe| %>
    <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
      <div class="card w-100 bg-transparent border-0" style="width: 18rem;">
        <%= link_to public_cafe_path(cafe) do%>
      　<p class="img-wrap"><%= attachment_image_tag cafe, :image, width: "80%", format: "jpeg", fallback: "no_image.jpeg" ,class:"rounded"%></p>
        <% end %>
        <div class="card-body">
          <p class="item-details item-name card-text"><h6><strong>カフェ名</strong></h6><%= cafe.name %></p>
          <p class="item-details item-address card-text"><h6><strong>店舗住所</strong></h6><%= cafe.address %></p>
      </div>
    </div>
  </div>
  <% end %>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-4 py-2 mt-4">
       <%= paginate @cafes %>
     </div>
   </div>
  </div>
 </div>
 
  