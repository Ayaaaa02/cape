 <div class="container">
  <div class="row-8 my-3">
    <div class="col-lg-4 text-right">
<h4 class="bg-light text-dark text-center">予約情報入力</h4>
 </div>
  </div>
  
   <div class="row my-3">
   <div class="col-lg-10" style="width: 250px;">

<%= form_with model: @resevation, url: public_resevations_confirm_path, local: true do |f| %>
 <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">

<tr>
    <td>カフェ名</td>
</tr>

 </div>
</div>

<div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">

<p>内容</p>

 </div>
</div>

<div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">

<tr>
    <td><%= f.label "人数" %></td>
    <td><%= f.text_field :people, size: "2×2"%>名</td>
</tr>
 </div>
</div>


<tr>
    <div>お支払方法</div>
    
    <td><%= f.radio_button :payment_method, :"クレジットカード", checked: true %></td>
    <td> <%= f.label :"クレジットカード" %></td>  
  

　　<td><%= f.radio_button :payment_method, :"店頭でお支払い" %></td>
    <td><%= f.label :"店頭でお支払い" %></td>
</tr>


<div class="row">
<div class="col-sm-3 px-sm-0 offset-sm-1">


<tr>
    <div>ご来店日時</div>
    <td><%= f.label "年月日" %></td>
    <td><%= f.date_select :coming_date,{} %></td>
</tr> 

 </div>
</div>

<div class="row">
<div class="col-sm-3 px-sm-0 offset-sm-1">

<tr>
    <td><%= f.label "日時" %></td>
    <td><%= f.time_select :time, {} %>(11時〜17時)</td>
</tr>
 </div>
</div>

<tr>
<%= f.submit "確認する", class: 'btn btn-sm btn-dark'%>
</tr>

<% end %>
