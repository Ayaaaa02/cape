<h2>Sign up</h2>

<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: @customer %>
  <h4>新規登録</h4>
  
   <%= form_with model: @customer, url: customer_registration_path do |f| %>
   
  <tr>
     <td><%= f.label "名前" %></td></br>
    <td><%= f.label "(姓)" %></br>
    <%= f.text_field :last_name %></td>
    <td><%= f.label "(名)" %></br>
    <%= f.text_field :first_name %></td>
  </tr>
  
  <tr>
    <td><%= f.label "フリガナ" %></td></br>
   <td><%= f.label "(セイ)" %></br>
    <%= f.text_field :last_name_kana %></td>
    <td><%= f.label "(メイ)" %></br>
    <%= f.text_field :first_name_kana %></td>
  </tr>
  
  <tr>
    <td><%= f.label "メールアドレス" %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </tr>
  
  <tr>
     <td><%= f.label "電話番号(ハイフンなし)" %></td>
    <td><%= f.text_field :phone_number, placeholder:"0000000" %></td>
  </tr>
  
  <tr>
    <td><%= f.label "パスワード(6文字以上)" %></td>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
 </tr>

 <tr>
   <td><%= f.label "パスワード(確認用)" %></td>
    <%= f.password_field :password_confirmation, autocomplete: "password_confirmation" %>
  </tr>

  <tr>
    <%= f.submit "新規登録" %>
  </tr>
<% end %>

<%= render "public/shared/links" %>
