<div class="content public-customers-show">
<div class="container">
    <div class="row- my-5">
        <div class="col-sm-8 px-sm-0 offset-sm-1 m-4">
    <h4><strong>マイページ</strong></h4>
</div>
</div>
<h4><strong>登録情報</strong></h4>

<div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1">
<table class="table table-bordered">
<tr>
    <th class="table-active">お名前</th>
    <td><%=  @customer.last_name %><%= @customer.first_name %></td>
</tr>

<tr>
    <th class="table-active">フリガナ</th>
    <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
</tr>
<tr>
    <th class="table-active">電話番号</th>
    <td><%= @customer.phone_number %></td>
</tr>

<tr>
    <th class="table-active">メールアドレス</th>
    <td><%= @customer.email %></td>
</tr>

</table>
</div>
</div>
<div class="col-sm-4 px-sm-0 m-5">
<%= link_to "編集する", customers_information_edit_path, class: 'btn btn-outline-danger' %>
 </div>
</div>
</div>