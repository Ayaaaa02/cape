<div class="container">
    <div class="row- my-5">
        <div class="col-sm-8 px-sm-0 offset-sm-1">
<h4>登録情報編集</h4>

</div>
</div>


<%= form_with model: @customer, url:customers_path do |f| %>

<table class="table m-5">

<tr class="m-5">
    <td>氏名</td>
    <td><%= f.text_field :last_name %></td>
    <td><%= f.text_field :first_name %></td>
</tr>

<tr class="m-5">
    <td>フリガナ</td>
    <td><%= f.text_field :last_name_kana %></td>
    <td><%= f.text_field :first_name_kana %></td>
</tr>

<tr class="m-5">
    <td>電話番号</td>
    <td><%= f.text_field :phone_number %></td>
</tr>

<tr class="m-5">
    <td>メールアドレス</td>
    <td><%= f.text_field :email %></td>
</tr>
</table>

<div class="col-sm-5 px-sm-0 m-5">  
    <td><%= f.submit "編集内容を保存", class: 'btn btn-outline-danger' %></td>
</div>

<% end %>

</div>