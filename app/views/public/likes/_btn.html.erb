<% if current_customer.present? %>
  <% if cafe.liked_by?(current_customer) %>
    <%= link_to public_cafe_likes_path(cafe), method: :delete do %>
      <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= cafe.likes.count %> 
    <% end %>
  <% else %>
    <%= link_to public_cafe_likes_path(cafe), method: :post do %>
      <i class="fas fa-heart" aria-hidden="true"></i>
      <%= cafe.likes.count %> 
    <% end %>
   <% end %>
  <% end %>
