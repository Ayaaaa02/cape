<div class="container">
    <h2 class="text-center my-5">カフェ編集</h2>
    <div class="row">
        <div class="col-8 offset-2 mb-5">
            <%= form_with model: @cafe, url: admin_cafe_path(@cafe), local: true do |f| %>
            <teble>

                <tr>
                    <div class="form-group">
                        <%= f.label :カフェ画像, class:"form_label" %>
                        <%= f.file_field :image, class:"mb-3 ml-3" %>
                    </div>
                </tr>
                <tr>
                    <div class="form-group">
                        <%= f.label :カフェ名,class:"form_label" %>
                        <%= f.text_field :name, placeholder:"カフェ名", class:"form-control mb-3" %>
                    </div>
                </tr>
                <tr>
                    <div class="form-group">
                        <%= f.label :店舗住所,class:"form_label" %>
                        <%= f.text_field :address,placeholder:"店舗住所",class:"form-control mb-3" %>
                    </div>
                </tr>
                <tr>
                    <div class="form-group">
                        <%= f.label :カフェ説明, class:"form-label" %>
                        <%= f.text_area :introduction, size: "50×5", placeholder:"ここに説明文を記述します",class:"form-control form-control-lg mb-3" %>
                    </div>
                </tr>
                <tr>
                    <div class="form-group">
                        <th><%= f.label :開閉ステータス %></th>
                        <td><%= f.radio_button :status, true, checked: true %>
                            <%= f.label :status, "開店中" %>
                            <%= f.radio_button :status, false %>
                            <%= f.label :status, "閉店中" %>
                        </td>
                    </div>
                </tr>
                <tr>
                    <div class="form-action d-flex justify-content-around"> 
                        <%= f.submit "変更を保存", class:"btn btn-dark" %>
                        <%= link_to "カフェ詳細へ戻る", admin_cafe_path, class:"btn btn-outline-dark" %>
                    </div>
                </tr>
                <% end %>
            </teble>
        </div>
    </div>
</div>
