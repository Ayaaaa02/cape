<div class="container">
    <div class="row p-5">
        <div class="col-sm-8 px-sm-0 offset-sm-1">
            <h4><strong>カフェ新規登録</strong></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10 px-sm-0 mx-auto mb-5">
            <%= form_with model: @cafe, url: admin_cafes_path, local: true do |f| %>
            <table>
                <tr>
                    <div class="form-group">
                        <th><%= f.label :カフェ画像, class:"form_label" %></th>
                        <th><%= f.file_field :image, class:"mb-3 ml-3" %></th>
                    </div>
                </tr>
                <tr>
                    <div class="form-group">
                        <th><%= f.label :カフェ名, class:"form_label" %></th>
                        <th><%= f.text_field :name, placeholder:"カフェ名", class:"form-control mb-3"%></th>
                    </div>
                </tr>
                <tr>
                    <div class="form-group">
                        <th><%= f.label :店舗住所, class:"form_label" %></th>
                        <th><%= f.text_field :address, placeholder:"店舗住所", class:"form-control mb-3" %></th>
                    </div>
                </tr>
                <tr>
                    <div class="form-group">
                        <th><%= f.label :カフェ説明, class:"form_label" %></th>
                        <th><%= f.text_area :description, size: "50×5", placeholder:"ここに説明文を記述します", class:"form-control form-control-lg mb-3" %></th>
                    </div>
                </tr>
                 <tr>
                    <div class="form-group">
                        <th><%= f.label :開閉ステータス %></th>
                        <td><%= f.radio_button :status, true, checked: true %>
                            <%= f.label :status, "開店中" %>
                            <%= f.radio_button :status, false %>
                            <%= f.label :status, "閉店中" %>
                        </td>
                    </div>
                </tr>
                <tr>
                    <div class="form-action m-2">
                        <th><%= f.submit "新規登録", class:"btn btn-dark" %></th>
                    </div>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>
